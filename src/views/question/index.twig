{% extends 'layouts/_default.twig' %}

{% block main_content %}
    <ul>
        {% for question in questions %}
            <li>{{ question.name }} - 
            <a href="/question/{{ question.id }}/edit">Edit Question</a>
            |
            <a href="/question/{{ question.id }}/delete">Delete Question</a>
            </li>
        {% endfor %}
    </ul>
    <p>
        <a href="/questions/new">Create a New Question</a>
    </p>


{% endblock %}